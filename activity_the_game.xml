<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    android:id="@+id/layout"
    tools:context="com.adionofrei.pressonfix.TheGame">

    <TextView
        android:id="@+id/pointxml"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="152dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="0"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="154dp" />

    <TextView
        android:id="@+id/strike"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/pointxml"
        android:gravity="center"
        android:padding="8dp"
        android:text="points"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="154dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:background="@drawable/text_view_circle"
        android:gravity="center"
        android:padding="8dp"
        android:text="0"
        android:textSize="32sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="154dp" />

    <View

        android:id="@+id/view1"
        android:layout_width="7dp"
        android:layout_height="200dp"
        android:layout_alignEnd="@+id/textView1"
        android:layout_alignTop="@+id/view2"
        android:layout_gravity="center"
        android:background="@drawable/button_view_circle" />

    <View

        android:id="@+id/view2"
        android:layout_width="7dp"
        android:layout_height="200dp"
        android:layout_alignStart="@+id/textView1"
        android:layout_alignTop="@+id/textView1"
        android:layout_gravity="center"
        android:layout_marginTop="147dp"
        android:background="@drawable/button_view_circle" />


    <Button
        android:id="@+id/button1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/view2"
        android:layout_marginBottom="150dp"
        android:background="@drawable/button_view_circle"
        android:text="STOP" />

    <TextView
        android:id="@+id/yourhigh"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button1"
        android:layout_marginTop="-150dp"
        android:text="Your highscore"
        android:textAlignment="center"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/highscorehere"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="0"
        android:layout_below="@+id/yourhigh"
        android:textAlignment="center"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="0dp" />
</RelativeLayout>
